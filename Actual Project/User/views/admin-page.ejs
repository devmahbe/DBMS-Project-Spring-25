                <button class="btn-organize" data-section="cases">
                    <i class="fas fa-chart-bar"></i>
                    <span>Cases</span>
                </button>
                <button class="btn-organize" data-section="users">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
