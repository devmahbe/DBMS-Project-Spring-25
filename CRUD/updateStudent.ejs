<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Student</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6 flex items-center justify-center min-h-screen">

<div class="bg-white p-8 rounded-lg shadow-lg max-w-lg w-full">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Update Student</h1>

    <form action="" method="POST" class="space-y-4">
        <input type="hidden" name="student_id" value="<%= updateStudent[0].student_id %>">

        <div>
            <label class="block text-gray-700 font-medium">Name</label>
            <input type="text" name="name" value="<%= updateStudent[0].name %>" required class="w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        </div>

        <div>
            <label class="block text-gray-700 font-medium">Email</label>
            <input type="email" name="email" value="<%= updateStudent[0].email %>" required class="w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        </div>

        <div>
            <label class="block text-gray-700 font-medium">Age</label>
            <input type="number" name="age" value="<%=updateStudent[0].age %>" required class="w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        </div>

        <div>
            <label class="block text-gray-700 font-medium">Class</label>
            <input type="text" name="class" value="<%=updateStudent[0].class %>" required class="w-full p-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500">
        </div>

        <div class="flex justify-between mt-4">
            <a href="/students" class="px-4 py-2 bg-gray-500 text-white rounded-lg hover:bg-gray-700 transition">Cancel</a>
            <button type="submit" value="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-800 transition">Update</button>
        </div>
    </form>
</div>

</body>
</html>
